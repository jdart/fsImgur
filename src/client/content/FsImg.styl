
.fs-img
  width 100%
  height 100vh
  display flex
  align-items center
  justify-content center
  position relative

  img
    max-height max-content
    height 100%
    max-width max-content
    width 100%
    object-fit contain

  .caption
    position absolute
    bottom 1em
    left 1em
    right 1em
    > div
      color white
      display flex
      font-size 80%
      justify-content center
      align-items flex-end
      span
        border-radius 1em
        padding 1em
        background rgba(0, 0, 0, 0.5)

.fs-img-tall
  height auto
