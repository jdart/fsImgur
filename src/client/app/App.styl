// Remember to use rems and ems. http://css-tricks.com/rems-ems.

@import '../../../node_modules/normalize.css/normalize.css'
@import '../../../node_modules/font-awesome/css/font-awesome.css'

// http://phonegap-tips.com/articles/essential-phonegap-css-webkit-tap-highlight-color.html
*
  -webkit-tap-highlight-color rgba(0,0,0,0)

// Goodness.
*, ::after, ::before
  box-sizing border-box

html,
body
  height 100%

body
  background-color: #eee;

.custom-subreddit
  text-align center

.login
  width 100vw
  height 100vh
  text-align center
  display flex
  align-items center
  justify-content center

.home-subreddits
  column-count 3
  li
    list-style-type none

.entries
  display flex
  align-content stretch

.entries-content
  order 1
  flex auto
  background-color #ccc
  overflow auto

.entries-content-img
  width 100%
  height 100vh
  background-size contain
  background-repeat no-repeat
  background-position center

.entries-nav
  min-height 100vh
  width 25vw
  order 2
  padding 1em
  h2
    font-size: 20px
    margin-top 0

.fsIframe
  height 100vh
  width 75vw
  border none

.gfycat-aligner
  text-align center
  display flex
  align-items center
  justify-content center
  height 100%

.gfycat
  -webkit-backface-visibility hidden
  -webkit-transform scale(1)
  width 100%

.content-reddit-body
  padding 0 1em
  margin-bottom 3em

.comments
  padding 0 1em
  > .comment:first-of-type
    border-top solid 1px black
  .comment
    .body
      border-bottom solid 1px black
    .details
      padding-top 1em
  .replies
    margin-left 2em

